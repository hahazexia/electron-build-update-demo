{
  "name": "electron-update",
  "version": "1.0.0",
  "main": "dist/main/index.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dev": "rimraf ./dist && npm run dev:vite && electron .",
    "dev:vite": "vite build",
    "dev:electron": "wait-on dist/main/index.js && electron .",
    "clean": "rimraf ./dist && rimraf ./out",
    "build:vite": "vite build",
    "build": "npm run clean && npm run build && electron-builder build",
    "server": "node server.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "hahazexia",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@electron/asar": "^4.0.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@types/electron": "^1.4.38",
    "@types/node": "^24.2.0",
    "concurrently": "^9.2.0",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "globby": "^14.1.0",
    "koa": "^3.0.1",
    "koa-range-static": "^1.3.0",
    "koa-router": "^13.1.1",
    "koa-static-server": "^1.5.2",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2",
    "vite": "^7.0.6",
    "vite-plugin-electron": "^0.29.0"
  },
  "build": {
    "appId": "update.test",
    "directories": {
      "output": "out"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "http://127.0.0.1:33855/"
      }
    ],
    "win": {
      "target": "nsis",
      "requestedExecutionLevel": "requireAdministrator"
    },
    "nsis": {
      "createDesktopShortcut": "always",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "electronDownload": {
      "mirror": "https://registry.npmmirror.com/binary.html?path=electron/"
    },
    "files": [
      "**/*",
      ".env",
      "package.json",
      "!public",
      "!.gitignore",
      "!package-lock.json",
      "!README.md",
      "!server.js",
      "!update.json"
    ]
  },
  "dependencies": {
    "axios": "^1.11.0",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.1",
    "electron-log": "^5.4.2",
    "electron-updater": "^6.6.2",
    "fs-extra": "^11.3.1",
    "iconv-lite": "^0.6.3",
    "local-pkg": "^1.1.1"
  }
}
