{
  "name": "electron-update",
  "version": "0.0.19",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dev:ts": "tsc -p tsconfig.json",
    "dev:cjs": "tsc -p tsconfig.cjs.json",
    "dev:copy": "copyfiles -u 2 ./src/renderer/* ./dist",
    "dev:watch": "nodemon --watch ./src --ext ts,js,html,css --exec \"npm run dev\"",
    "dev": "npm run clean && npm run dev:cjs && npm run dev:ts &&  npm run dev:copy && electron .",
    "dev:vite": "npm run build:vite && electron .",
    "clean": "rimraf ./dist",
    "clean:build": "rimraf -g ./out/* && rimraf -g ./nsis_publish/Output/*",
    "build:es": "vite build --config vite.es.config.js",
    "build:cjs": "vite build --config vite.cjs.config.js",
    "build:vite": "npm run clean && npm run build:es && npm run build:cjs",
    "build:electron": "electron-builder build",
    "build": "node beforePack.cjs && npm run clean:build && npm run build:vite && electron-builder build",
    "rebuild": "electron-rebuild -f -w better-sqlite3",
    "server": "node server.js"
  },
  "author": "hahazexia",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "better-sqlite3": "^11.10.0",
    "dotenv": "^17.2.1",
    "electron-log": "^5.4.2",
    "electron-updater": "^6.6.2",
    "iconv-lite": "^0.6.3"
  },
  "devDependencies": {
    "@electron/asar": "^4.0.0",
    "@rollup/plugin-commonjs": "^28.0.6",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@types/better-sqlite3": "^7.6.13",
    "@types/electron": "^1.4.38",
    "@types/node": "^24.2.0",
    "axios": "^1.11.0",
    "concurrently": "^9.2.0",
    "copyfiles": "^2.4.1",
    "date-fns": "^4.1.0",
    "electron": "^37.2.4",
    "electron-builder": "^26.0.12",
    "fs-extra": "^11.3.1",
    "globby": "^14.1.0",
    "koa": "^3.0.1",
    "koa-range-static": "^1.3.0",
    "koa-router": "^13.1.1",
    "koa-static-server": "^1.5.2",
    "nodemon": "^3.1.10",
    "rimraf": "^6.0.1",
    "typescript": "^5.9.2",
    "vite": "^7.0.6",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-static-copy": "^3.1.1"
  },
  "build": {
    "appId": "update.test",
    "directories": {
      "output": "out"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "http://127.0.0.1:33855/"
      }
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "createDesktopShortcut": "always",
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "electronDownload": {
      "mirror": "https://registry.npmmirror.com/binary.html?path=electron/"
    },
    "files": [
      "**/*",
      ".env",
      "package.json",
      "!nsis_publish/**/*",
      "!out/**/*",
      "!public",
      "!src",
      "!.gitignore",
      "!afterAllArtifactBuild.cjs",
      "!afterPack.cjs",
      "!beforePack.cjs",
      "!*.ico",
      "!installer.nsi",
      "!License.txt",
      "!out.log",
      "!package-lock.json",
      "!README.md",
      "!Readme.txt",
      "!server.js",
      "!sha512.js",
      "!tsconfig.*.json",
      "!tsconfig.json",
      "!update.json",
      "!vite.*.config.ts",
      "!*.exe"
    ],
    "afterPack": "./afterPack.cjs"
  }
}
