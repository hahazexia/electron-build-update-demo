{
  "compilerOptions": {
    "allowJs": true,
    "outDir": "./dist",
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",
    "rootDir": "./src/main",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["./src/main/**/*"],
  "exclude": ["node_modules", "dist", "./src/main/preload.ts"]
}
